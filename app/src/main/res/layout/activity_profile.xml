<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".login_signup.profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_pro"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/landing_text_color"
        android:elevation="4dp"
        android:backgroundTint="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="56dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/my_prof_card"
        android:layout_width="match_parent"
        android:layout_margin="16dp"


        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >


            <TextView
                android:id="@+id/tab_s"
                android:layout_width="wrap_content"
                android:text="My Projects"
                android:layout_margin="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_height="wrap_content"

                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Approved "
                    >
                </TextView>
                <TextView
                    android:id="@+id/prof_appr_count"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="125dp"
                android:layout_height="wrap_content"


                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Pending "
                    >
                </TextView>
                <TextView
                    android:id="@+id/prof_pend_count"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="34dp"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>




        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:gravity="right"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/stats"



                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info_outline" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/pl1"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/adminLinear"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/button_admin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_exit_to_app"
                android:drawableStart="@drawable/ic_settings_brightness"
                android:includeFontPadding="false"
                android:textColor="@color/errorColor"
                android:text="Admin Panel"
                android:visibility="gone"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/editBT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_create"
                android:drawableStart="@drawable/ic_create"
                android:includeFontPadding="false"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/aboutBT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_people"
                android:drawableStart="@drawable/ic_people"
                android:includeFontPadding="false"
                android:text="About Us"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_exit_to_app"
                android:drawableStart="@drawable/ic_exit_to_app"
                android:includeFontPadding="false"

                android:text="@string/Logout"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                />

        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/button_admin"-->
            <!--android:layout_width="340dp"-->
            <!--android:layout_height="wrap_content"-->
           <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/my_button"-->
            <!--android:visibility="gone"-->
            <!--android:text="Admin Panel" />-->
    </LinearLayout>

</LinearLayout>




</RelativeLayout>